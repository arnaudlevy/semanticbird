<div class="row mt-4">
  <% tweets.each do |tweet| %>
    <div class="col-md-4">
      <div class="card mb-4 tweet">
        <div class="card-body">
          <p class="mb-1"><%= tweet %></p>
          <div>
            <%= link_to 'Analyze this tweet', tweet, class: 'small me-3' %>
            <%= link_to 'See on Twitter', tweet.url, target: :_blank, class: 'small' %>
          </div>
          <div class="tweet__themes mt-2">
            <% tweet.themes.each do |theme| %>
              <%= link_to theme, theme, class: 'theme' %>
            <% end %>
          </div>
        </div>
        <div class="card-footer">
          <span class="small text-muted float-end">
            <%= l tweet.created_at, format: :short %>
          </span>
          <p class="mb-1"><%= link_to tweet.account, tweet.account %>, <%= tweet.account.country %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate tweets %>
