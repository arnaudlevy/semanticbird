<%= simple_form_for account do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :name %>
    </div>
    <div class="col-md-4">
      <%= f.input :username %>
    </div>
    <div class="col-md-4">
      <%= f.input :country, input_html: { class: 'form-select' } %>
    </div>
  </div>
  <%= f.button :submit %>
<% end %>
